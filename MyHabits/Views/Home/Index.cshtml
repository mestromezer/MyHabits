@model IEnumerable<MyHabits.Models.Habit>

@{
    ViewData["Title"] = "Трекер твоих привычек";
}

<div class="main_window">
    <h1 class="text-center">My habits app - трекер твоих полезных привычек</h1>

    <table class="table center">

        <tbody>
            <tr>
                <th>Привычка</th>
                @for (int i = 0; i < ViewBag.dates.Count; i++)
                {
                    <th>
                                @ViewBag.dates[i].DayOfWeek
                                @ViewBag.dates[i].Date.ToShortDateString()
                    </th>
                }
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item._name)</a>
                    </td>
                    
                    @foreach (var check_point in item._dates_of_habit.ThisWeekChecksPoints())
                    {
                    <td>
                        @if (check_point)
                        {
                            <input type="checkbox" checked>
                        }
                        else
                        {
                            <input type="checkbox">
                        }
                    </td>
                        }
                </tr>
            }
        </tbody>
    </table>
    <input class="pos_btn" type="button" onclick="location.href='@Url.Action("Create", "Home")'"  style="float:right" asp-action="Create" value="Добавить привычку">
</div>

@model MyHabits.Models.Habit

@{
    ViewData["Title"] = "Редактировать";
}

<form asp-action="Edit" class="content">
    <h4>Внесите изменения</h4>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="_id" />

    <div class="form-group">
        <label asp-for="_name">Название</label>
        <input asp-for="_name" />
        <span asp-validation-for="_name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="_date_of_start">Дата начала</label>
        <input asp-for="_date_of_start" />
        <span asp-validation-for="_date_of_start" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить изменения" class="btn pos_btn form-control" />
        <input type="button" class="btn neg_btn form-control" value="Удалить" onclick="location.href='@Url.Action("Delete", "Home")'">
        <input type="button" class="btn form-control" value="Назад" onclick="location.href='@Url.Action("Index", "Home")'">
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
